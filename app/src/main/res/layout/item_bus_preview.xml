<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/book_mark"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_before_bookmark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.1"
        />
    <TextView
        android:id="@+id/bus_num"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toEndOf="@id/book_mark"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="버스 번호"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        />
    <ImageView
        android:id="@+id/circle"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_green_circle"
        app:layout_constraintStart_toEndOf="@id/bus_num"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/inforlayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/circle"
        app:layout_constraintEnd_toStartOf="@id/first_arrive">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="첫차 :"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="다음 차 :"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/first_arrive"
        android:text="없음"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/inforlayout"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/second_arrive"
        android:text="없음"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/first_arrive"
        app:layout_constraintStart_toEndOf="@id/inforlayout"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>